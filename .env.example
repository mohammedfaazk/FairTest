# Yellow Network (Nitrolite / ClearNode) - real off-chain sessions
# getSigner(walletAddress) must be set in app (e.g. globalThis.__FAIRTEST_GET_SIGNER__) when wallet connects
YELLOW_CLEARNODE_WS_URL=wss://clearnet-sandbox.yellow.com/ws
YELLOW_PLATFORM_WALLET=0x0000000000000000000000000000000000000000

# Sui Network Configuration (deployed Move package: exam, submission, result)
SUI_PACKAGE_ID=0x_your_deployed_package_id_here
SUI_NETWORK=testnet
SUI_PRIVATE_KEY=your_sui_private_key_here
SUI_RPC_URL=https://fullnode.testnet.sui.io:443

# ENS Configuration (Sepolia or Mainnet)
# For Sepolia: use Sepolia ENS deployment addresses; for mainnet .eth use mainnet registry.
ENS_RPC_URL=https://sepolia.infura.io/v3/your_infura_key
# Or use SEPOLIA_RPC_URL (same as ENS_RPC_URL when using Sepolia for ENS)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_key
SEPOLIA_PRIVATE_KEY=your_sepolia_private_key_here
# ENS Registry (mainnet: 0x00000000000C2E074eC69A0dFb2997BA6C7d2e1e; Sepolia: use Sepolia deployment)
ENS_REGISTRY_ADDRESS=0x00000000000C2E074eC69A0dFb2997BA6C7d2e1e
# Public Resolver (mainnet: 0x231b0Ee14048e9dCcD1d247744d114a4EB5E8E63; Sepolia: 0x8FADE66B79cC9f707aB26799354482EB93a5B7dD)
ENS_RESOLVER_ADDRESS=0x8FADE66B79cC9f707aB26799354482EB93a5B7dD
# Root domain you own (must have resolver set for subdomain index)
FAIRTEST_ENS_DOMAIN=fairtest.eth

# Platform Configuration
PLATFORM_LISTING_FEE=0.1
PLATFORM_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# Frontend: show "Demo Mode" banner (set in frontend/.env.local)
# NEXT_PUBLIC_DEMO_MODE=true
